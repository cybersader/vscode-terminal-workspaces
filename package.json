{
  "name": "terminal-workspaces",
  "displayName": "Terminal Workspaces",
  "description": "Manage terminal sessions with a sidebar GUI. Supports WSL, tmux, PowerShell, nested folders, profiles, and more. Perfect for multi-project and agentic coding workflows.",
  "version": "0.4.5",
  "publisher": "cybersader",
  "license": "MIT",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cybersader/vscode-terminal-workspaces"
  },
  "bugs": {
    "url": "https://github.com/cybersader/vscode-terminal-workspaces/issues"
  },
  "homepage": "https://github.com/cybersader/vscode-terminal-workspaces#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "keywords": [
    "terminal",
    "tasks",
    "wsl",
    "tmux",
    "workspace",
    "multi-project",
    "shell",
    "powershell",
    "bash",
    "session",
    "workflow"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "terminalWorkspacesContainer",
          "title": "Terminal Workspaces",
          "icon": "$(terminal)"
        }
      ]
    },
    "views": {
      "terminalWorkspacesContainer": [
        {
          "id": "terminalWorkspacesView",
          "name": "Terminal Workspaces",
          "icon": "$(terminal)",
          "contextualTitle": "Terminal Workspaces"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "terminalWorkspacesView",
        "contents": "No terminal tasks configured.\n[Add Current File's Folder](command:terminalWorkspaces.addCurrentFileFolder)\n[Browse for Folder](command:terminalWorkspaces.addBrowseFolder)\n[Open Config](command:terminalWorkspaces.openConfig)"
      }
    ],
    "commands": [
      {
        "command": "terminalWorkspaces.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "terminalWorkspaces.addFolderToTasks",
        "title": "Terminal Workspaces: Add Folder",
        "icon": "$(add)"
      },
      {
        "command": "terminalWorkspaces.addCurrentFileFolder",
        "title": "Terminal Workspaces: Add Task",
        "icon": "$(add)"
      },
      {
        "command": "terminalWorkspaces.addBrowseFolder",
        "title": "Terminal Workspaces: Browse for Folder",
        "icon": "$(folder-opened)"
      },
      {
        "command": "terminalWorkspaces.addTaskFolder",
        "title": "Terminal Workspaces: Create Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "terminalWorkspaces.runTask",
        "title": "Run Terminal",
        "icon": "$(play)"
      },
      {
        "command": "terminalWorkspaces.runFolderTasks",
        "title": "Run All Terminals in Folder",
        "icon": "$(run-all)"
      },
      {
        "command": "terminalWorkspaces.runTaskById",
        "title": "Run Terminal by ID"
      },
      {
        "command": "terminalWorkspaces.runAllTasks",
        "title": "Terminal Workspaces: Run All Terminals",
        "icon": "$(run-all)"
      },
      {
        "command": "terminalWorkspaces.attachAllSessions",
        "title": "Attach All Sessions",
        "icon": "$(run-all)"
      },
      {
        "command": "terminalWorkspaces.openSettings",
        "title": "Terminal Workspaces: Open Settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "terminalWorkspaces.editTask",
        "title": "Edit Task",
        "icon": "$(settings-gear)"
      },
      {
        "command": "terminalWorkspaces.rename",
        "title": "Rename",
        "icon": "$(edit)"
      },
      {
        "command": "terminalWorkspaces.delete",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "terminalWorkspaces.moveToFolder",
        "title": "Move to Folder",
        "icon": "$(move)"
      },
      {
        "command": "terminalWorkspaces.openConfig",
        "title": "Terminal Workspaces: Open Config File",
        "icon": "$(json)"
      },
      {
        "command": "terminalWorkspaces.openTasksJson",
        "title": "Terminal Workspaces: Open tasks.json",
        "icon": "$(json)"
      },
      {
        "command": "terminalWorkspaces.regenerateTasksJson",
        "title": "Terminal Workspaces: Regenerate tasks.json",
        "icon": "$(sync)"
      },
      {
        "command": "terminalWorkspaces.openTasksManager",
        "title": "Terminal Workspaces: Quick Open"
      },
      {
        "command": "terminalWorkspaces.searchTasks",
        "title": "Terminal Workspaces: Search",
        "icon": "$(search)"
      },
      {
        "command": "terminalWorkspaces.refreshTmuxSessions",
        "title": "Terminal Workspaces: Refresh tmux Sessions",
        "icon": "$(sync)"
      },
      {
        "command": "terminalWorkspaces.importTmuxSessions",
        "title": "Terminal Workspaces: Import tmux Sessions",
        "icon": "$(cloud-download)"
      },
      {
        "command": "terminalWorkspaces.attachTmuxSession",
        "title": "Attach to Session",
        "icon": "$(debug-start)"
      },
      {
        "command": "terminalWorkspaces.importTmuxSession",
        "title": "Import as Task",
        "icon": "$(add)"
      },
      {
        "command": "terminalWorkspaces.killTmuxSession",
        "title": "Kill Session",
        "icon": "$(trash)"
      },
      {
        "command": "terminalWorkspaces.killTmuxSessionFromTerminal",
        "title": "Kill tmux Session",
        "icon": "$(trash)"
      },
      {
        "command": "terminalWorkspaces.addFileParentFolder",
        "title": "Terminal Workspaces: Add File's Folder",
        "icon": "$(add)"
      },
      {
        "command": "terminalWorkspaces.addFromTerminal",
        "title": "Terminal Workspaces: Add Task",
        "icon": "$(add)"
      },
      {
        "command": "terminalWorkspaces.revealInExplorer",
        "title": "Reveal in File Explorer",
        "icon": "$(folder-opened)"
      },
      {
        "command": "terminalWorkspaces.revealInVSCodeExplorer",
        "title": "Reveal in VS Code Explorer",
        "icon": "$(file-submodule)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "terminalWorkspaces.addFolderToTasks",
          "when": "explorerResourceIsFolder",
          "group": "navigation@100"
        },
        {
          "command": "terminalWorkspaces.addFileParentFolder",
          "when": "!explorerResourceIsFolder",
          "group": "navigation@100"
        }
      ],
      "terminal/context": [
        {
          "command": "terminalWorkspaces.addFromTerminal",
          "group": "navigation@100"
        }
      ],
      "terminal/title/context": [
        {
          "command": "terminalWorkspaces.addFromTerminal",
          "group": "navigation@100"
        },
        {
          "command": "terminalWorkspaces.killTmuxSessionFromTerminal",
          "group": "9_kill@1"
        }
      ],
      "view/title": [
        {
          "command": "terminalWorkspaces.runAllTasks",
          "when": "view == terminalWorkspacesView",
          "group": "navigation@1"
        },
        {
          "command": "terminalWorkspaces.searchTasks",
          "when": "view == terminalWorkspacesView",
          "group": "navigation@2"
        },
        {
          "command": "terminalWorkspaces.addCurrentFileFolder",
          "when": "view == terminalWorkspacesView",
          "group": "navigation@3"
        },
        {
          "command": "terminalWorkspaces.addTaskFolder",
          "when": "view == terminalWorkspacesView",
          "group": "navigation@4"
        },
        {
          "command": "terminalWorkspaces.refresh",
          "when": "view == terminalWorkspacesView",
          "group": "navigation@5"
        },
        {
          "command": "terminalWorkspaces.addBrowseFolder",
          "when": "view == terminalWorkspacesView",
          "group": "overflow@1"
        },
        {
          "command": "terminalWorkspaces.openConfig",
          "when": "view == terminalWorkspacesView",
          "group": "overflow@2"
        },
        {
          "command": "terminalWorkspaces.openTasksJson",
          "when": "view == terminalWorkspacesView",
          "group": "overflow@3"
        },
        {
          "command": "terminalWorkspaces.regenerateTasksJson",
          "when": "view == terminalWorkspacesView",
          "group": "overflow@4"
        },
        {
          "command": "terminalWorkspaces.importTmuxSessions",
          "when": "view == terminalWorkspacesView",
          "group": "overflow@5"
        },
        {
          "command": "terminalWorkspaces.openSettings",
          "when": "view == terminalWorkspacesView",
          "group": "overflow@6"
        }
      ],
      "view/item/context": [
        {
          "command": "terminalWorkspaces.runTask",
          "when": "view == terminalWorkspacesView && (viewItem == terminalTask || viewItem == terminalTaskTmuxActive)",
          "group": "inline@1"
        },
        {
          "command": "terminalWorkspaces.editTask",
          "when": "view == terminalWorkspacesView && (viewItem == terminalTask || viewItem == terminalTaskTmuxActive)",
          "group": "inline@2"
        },
        {
          "command": "terminalWorkspaces.delete",
          "when": "view == terminalWorkspacesView && (viewItem == terminalTask || viewItem == terminalTaskTmuxActive)",
          "group": "inline@3"
        },
        {
          "command": "terminalWorkspaces.runFolderTasks",
          "when": "view == terminalWorkspacesView && viewItem == taskFolderWithChildren",
          "group": "inline@1"
        },
        {
          "command": "terminalWorkspaces.addTaskFolder",
          "when": "view == terminalWorkspacesView && viewItem =~ /^taskFolder/",
          "group": "inline@2"
        },
        {
          "command": "terminalWorkspaces.delete",
          "when": "view == terminalWorkspacesView && viewItem =~ /^taskFolder/",
          "group": "inline@3"
        },
        {
          "command": "terminalWorkspaces.runTask",
          "when": "view == terminalWorkspacesView && (viewItem == terminalTask || viewItem == terminalTaskTmuxActive)",
          "group": "1_run@1"
        },
        {
          "command": "terminalWorkspaces.editTask",
          "when": "view == terminalWorkspacesView && (viewItem == terminalTask || viewItem == terminalTaskTmuxActive)",
          "group": "2_edit@1"
        },
        {
          "command": "terminalWorkspaces.rename",
          "when": "view == terminalWorkspacesView && (viewItem == terminalTask || viewItem == terminalTaskTmuxActive)",
          "group": "2_edit@2"
        },
        {
          "command": "terminalWorkspaces.moveToFolder",
          "when": "view == terminalWorkspacesView && (viewItem == terminalTask || viewItem == terminalTaskTmuxActive)",
          "group": "2_edit@3"
        },
        {
          "command": "terminalWorkspaces.delete",
          "when": "view == terminalWorkspacesView && (viewItem == terminalTask || viewItem == terminalTaskTmuxActive)",
          "group": "3_delete@1"
        },
        {
          "command": "terminalWorkspaces.revealInExplorer",
          "when": "view == terminalWorkspacesView && (viewItem == terminalTask || viewItem == terminalTaskTmuxActive)",
          "group": "4_reveal@1"
        },
        {
          "command": "terminalWorkspaces.revealInVSCodeExplorer",
          "when": "view == terminalWorkspacesView && (viewItem == terminalTask || viewItem == terminalTaskTmuxActive)",
          "group": "4_reveal@2"
        },
        {
          "command": "terminalWorkspaces.runFolderTasks",
          "when": "view == terminalWorkspacesView && viewItem == taskFolderWithChildren",
          "group": "1_run@1"
        },
        {
          "command": "terminalWorkspaces.addTaskFolder",
          "when": "view == terminalWorkspacesView && viewItem =~ /^taskFolder/",
          "group": "2_add@1"
        },
        {
          "command": "terminalWorkspaces.rename",
          "when": "view == terminalWorkspacesView && viewItem =~ /^taskFolder/",
          "group": "2_edit@1"
        },
        {
          "command": "terminalWorkspaces.moveToFolder",
          "when": "view == terminalWorkspacesView && viewItem =~ /^taskFolder/",
          "group": "2_edit@2"
        },
        {
          "command": "terminalWorkspaces.delete",
          "when": "view == terminalWorkspacesView && viewItem =~ /^taskFolder/",
          "group": "3_delete@1"
        },
        {
          "command": "terminalWorkspaces.attachAllSessions",
          "when": "view == terminalWorkspacesView && viewItem == tmuxSessionsHeader",
          "group": "inline@1"
        },
        {
          "command": "terminalWorkspaces.refreshTmuxSessions",
          "when": "view == terminalWorkspacesView && viewItem == tmuxSessionsHeader",
          "group": "inline@2"
        },
        {
          "command": "terminalWorkspaces.attachAllSessions",
          "when": "view == terminalWorkspacesView && viewItem == tmuxSessionsHeader",
          "group": "1_attach@1"
        },
        {
          "command": "terminalWorkspaces.refreshTmuxSessions",
          "when": "view == terminalWorkspacesView && viewItem == tmuxSessionsHeader",
          "group": "2_refresh@1"
        },
        {
          "command": "terminalWorkspaces.attachTmuxSession",
          "when": "view == terminalWorkspacesView && viewItem == tmuxSession",
          "group": "inline@1"
        },
        {
          "command": "terminalWorkspaces.importTmuxSession",
          "when": "view == terminalWorkspacesView && viewItem == tmuxSession",
          "group": "inline@2"
        },
        {
          "command": "terminalWorkspaces.attachTmuxSession",
          "when": "view == terminalWorkspacesView && viewItem == tmuxSession",
          "group": "1_attach@1"
        },
        {
          "command": "terminalWorkspaces.importTmuxSession",
          "when": "view == terminalWorkspacesView && viewItem == tmuxSession",
          "group": "2_import@1"
        },
        {
          "command": "terminalWorkspaces.killTmuxSession",
          "when": "view == terminalWorkspacesView && viewItem == tmuxSession",
          "group": "3_kill@1"
        },
        {
          "command": "terminalWorkspaces.killTmuxSession",
          "when": "view == terminalWorkspacesView && viewItem == terminalTaskTmuxActive",
          "group": "3_kill@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "terminalWorkspaces.runAllTasks",
        "key": "ctrl+shift+alt+t",
        "mac": "cmd+shift+alt+t"
      },
      {
        "command": "terminalWorkspaces.addCurrentFileFolder",
        "key": "ctrl+shift+alt+a",
        "mac": "cmd+shift+alt+a"
      },
      {
        "command": "terminalWorkspaces.openTasksManager",
        "key": "ctrl+shift+alt+o",
        "mac": "cmd+shift+alt+o"
      }
    ],
    "configuration": {
      "title": "Terminal Workspaces",
      "properties": {
        "terminalWorkspaces.defaultProfile": {
          "type": "string",
          "default": "wsl-default",
          "enum": [
            "wsl-default",
            "wsl-tmux",
            "powershell",
            "cmd",
            "bash",
            "default"
          ],
          "enumDescriptions": [
            "WSL terminal (auto-detects Windows vs WSL environment)",
            "WSL with tmux (attach-or-create sessions)",
            "Windows PowerShell",
            "Windows Command Prompt",
            "Native bash (Linux/macOS)",
            "VS Code's default terminal profile"
          ],
          "description": "Default profile to use when creating new terminal tasks"
        },
        "terminalWorkspaces.autoGenerateTasksJson": {
          "type": "boolean",
          "default": true,
          "description": "Automatically regenerate tasks.json when terminal-workspaces.json changes"
        },
        "terminalWorkspaces.groupTaskLabel": {
          "type": "string",
          "default": "Open All Terminals",
          "description": "Label for the group task that runs all terminal tasks"
        },
        "terminalWorkspaces.createGroupTask": {
          "type": "boolean",
          "default": true,
          "description": "Create a group task that opens all terminals at once"
        },
        "terminalWorkspaces.tmuxClickToAttach": {
          "type": "boolean",
          "default": false,
          "description": "Click on untracked tmux sessions to attach immediately (if disabled, clicking shows session info)"
        },
        "terminalWorkspaces.experimentalPathValidation": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "**[Experimental]** Validate task paths before running. If a path doesn't exist, prompts to update or browse for a new location."
        },
        "terminalWorkspaces.terminalLocation": {
          "type": "string",
          "default": "panel",
          "enum": ["panel", "editor"],
          "enumDescriptions": [
            "Open terminals in the bottom panel (default VS Code behavior)",
            "Open terminals in the editor area (enables 2D grid layouts)"
          ],
          "markdownDescription": "Where to open new terminals. **Note:** Currently only affects tmux session attach operations. Regular task terminals use VS Code's built-in task system which defaults to the panel."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  }
}
